@model IEnumerable<Brand>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Brand List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Brand" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Brand
            </a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="40%">@obj.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Brand" asp-action="Upsert" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-1"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a onClick="Delete('/Admin/Brand/Delete/@obj.Id')"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/dataAccess.js"></script>