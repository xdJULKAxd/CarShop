@page
@using CarShop.StaticData
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}
<div class="row">
	<div class="col-6 text-center">
		<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<h2 class="mt-5">Create a new user</h2>
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-floating py-2 col-12">
				<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
				<label asp-for="Input.Email"></label>
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>

			<div class="form-floating py-2 col-12">
				<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
				<label asp-for="Input.Password"></label>
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
				<label asp-for="Input.ConfirmPassword"></label>
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="Input.Name" class="form-control" aria-required="true" />
				<label asp-for="Input.Name"></label>
				<span asp-validation-for="Input.Name" class="text-danger"></span>
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="Input.Address" class="form-control" aria-required="true" />
				<label asp-for="Input.Address"></label>
				<span asp-validation-for="Input.Address" class="text-danger"></span>
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="Input.PostCode" class="form-control" aria-required="true" />
				<label asp-for="Input.PostCode"></label>
				<span asp-validation-for="Input.PostCode" class="text-danger"></span>
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="Input.City" class="form-control" aria-required="true" />
				<label asp-for="Input.City"></label>
				<span asp-validation-for="Input.City" class="text-danger"></span>
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="Input.Country" class="form-control" aria-required="true" />
				<label asp-for="Input.Country"></label>
				<span asp-validation-for="Input.Country" class="text-danger"></span>
			</div>
			@if (User.IsInRole(Role.Admin))
			{
				<div class="form-floating py-2 col-6">
					<select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class=form-select>
						<option disabled selected>-Select Role-</option>
					</select>
				</div>
			}
			<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-5">Register</button>
		</form>
	</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
